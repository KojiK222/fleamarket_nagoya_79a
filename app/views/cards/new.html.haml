.CreditNew
  .CreditNew__header
    = image_tag "logo/logo.png"
  .CreditNew__main
    = form_tag('/cards', method: :post, action: "create", id: 'charge-form',  name: "inputForm", class: "chapter__container__inner") do
      .CreditNew__main__header
        お支払い方法
      .CreditNew__main__contents
        .CreditNew__main__contents--content

          .CreditNew__FormField
            .CreditNew__FormField__label
              カード番号
            %span.form-require 必須
            = text_field_tag "number", "", class: "CreditNew__FormField__form number input__deafult", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .card__number__company
              .logo__visa
                = link_to '#' do
                  = image_tag 'logo/logo_visa.gif', alt: 'visa', height: '25px'
              .logo__mastercard
                = link_to '#' do
                  = image_tag 'logo/logo_mastercard.gif', alt: 'mastercard', height: '25px'
              .logo__diners
                = link_to '#' do
                  = image_tag 'logo/diners_logo_white.gif', alt: 'diners', height: '25px'

          .CreditNew__FormField
            .CreditNew__FormField__label
              有効期限
            %span.form-require 必須
            .CreditNew__FormField__flex
              %select.FormField__input.ProfileNew__form.select__default#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %i
                = icon('fas', 'chevron-down')
              .month__text 月
              %select.FormField__input.ProfileNew__form.select__default#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %i
                = icon('fas', 'chevron-down')
              .year__text 年
          .CreditNew__FormField
            .CreditNew__FormField__label
              セキュリティコード
            %span.form-require 必須
            = text_field_tag "cvc", "", class: "CreditNew__FormField__form cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            .security__code__backnumber
              .security__code__backnumber__question ?
              .security__code__backnumber__text カード裏面の番号とは？
          .actions
            = submit_tag "追加する", id: "token_submit", class: "top__margin"
          .back__text もどる

    .AccountPage__footer
      .AccountPage__footer__top
        %ul.AccountPage__footer__lists
          %li
          = link_to 'プライバシー', '#', class: "AccountPage__footer__lists__link"
          %li
          = link_to 'FURIMA利用規約', '#', class: "AccountPage__footer__lists__link"
          %li
          = link_to '特定商取引に関する表記', '#', class: "AccountPage__footer__lists__link"
      .AccountPage__footer__image
        %h1.app-title
          = link_to image_tag("logo/logo-white.png", class: "logo"), "#"
        %p.AccountPage__footer__image__copyright
          © FURIMA, Inc.

