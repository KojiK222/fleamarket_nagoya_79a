.mypage__header
  .mypage__header__inner
    .mypage__header__top
      %h1.hurima__icon
      = link_to "#" do
        = image_tag "logo/logo.png", width: "134px", height: "34px"
      %form.form{action: "#"}
        %input.form__input{type: "search", name: "keyword", placeholder: "何かお探しですか？"}
    .mypage__header__nav__box
      .left
        .category
          = link_to "#" do
            = image_tag "icon_category.png", width: "16px", height: "13px"
        .category__text
          = link_to '#' do
            %p.left__font カテゴリーから探す
        .brand
          = link_to "#" do
            = image_tag "icon_brand.png", width: "17px", height: "12px"
        .brand__text
          = link_to '#' do
            %p.left__font ブランドから探す
      %ul.right
        %li.heart.right-info
          = link_to '#', class: "right-link" do
            = icon('far', 'heart')
            .heart__font いいね！一覧
        %li.notice.right-info
          = link_to '#', class: "right-link" do
            = icon('far', 'bell')
            .notice__font お知らせ
        %li.todo.right-info
          = link_to '#', class: "right-link" do
            = icon('fas', 'check')
            .todo__font やることリスト
        %li.mypage.right-info
          = link_to '#', class: "right-link" do
            = image_tag "member_photo_noimage_thumb.png", width: "20px", height: "20px", class: "right-link-img" 
            .mypage__font マイページ
.mypage__nav
  .mypage__nav__contents
    .nav__furima
      = link_to '#' do
        %p.hurima__text フリマ
    .right__angle
      = icon('fas', 'angle-right')
    .mypage__text マイページ
.mypage__main
  .mypage__main__content
    .side
      .list__mypage
        = link_to '/users/show' do
          %P.list__mypage__text マイページ
      .list__notice
        = link_to '#' do
          %P.list__text お知らせ
      .list__todo
        = link_to '#' do
          %P.list__text やることリスト
      .list__like
        = link_to '#' do
          %P.list__text いいね！一覧
      .list__exhibit
        = link_to '/items/new' do
          %P.list__text 出品する
      .list__draft
        = link_to '#' do
          %P.list__text 下書き一覧
      .list__under__exhibit
        = link_to '#' do
          %P.list__text 出品した商品-出品中
      .list__during__trading
        = link_to '#' do
          %P.list__text 出品した商品-取引中
      .list__soldout
        = link_to '#' do
          %P.list__text 出品した商品ー売却済み
      .list__purchased__during__trading
        = link_to '#' do
          %P.list__text 購入した商品-取引中
      .list__past__trading
        = link_to '#' do
          %P.list__text 購入した商品-過去の取引
      .list__news
        = link_to '#' do
          %P.list__text ニュース一覧
      .list__evaluation
        = link_to '#' do
          %P.list__text 評価一覧
      .list__guide
        = link_to '#' do
          %P.list__text ガイド
      .list__inquiry
        = link_to '#' do
          %P.list__text お問い合わせ
      .merupay メルペイ
      .merupay__contents
        .sales 
          = link_to '#' do
            %p.merupay__setting__text 売上・振込申請
        .point 
          = link_to '#' do
            %p.merupay__setting__text ポイント
      .setting 設定
      .setting__contents
        .profile 
          = link_to '#' do
            %p.merupay__setting__text プロフィール
        .change__address 
          = link_to '#' do
            %p.merupay__setting__text 発送元・お届け先住所変更
        .pay 
          = link_to '/users/new' do
            %p.merupay__setting__text 支払い方法
        .mail__password 
          = link_to '#' do
            %p.merupay__setting__text メール/パスワード
        .person__info 
          = link_to '#' do
            %p.merupay__setting__text 本人情報
        .call__number 
          = link_to '#' do
            %p.merupay__setting__text 電話番号の確認
        .logout 
          = link_to '#' do
            %p.merupay__setting__text ログアウト
    .center
      .credit-card__registration
        .credit-card__registration__text クレジットカード情報入力
        %form.credit__form
          .registration__contents
            .card__number
              .card__number__text 
                .number__text カード番号
                .must__number 必須
              %input.numbers__text{type: "text", placeholder: "半角数字のみ"}
              .card__number__company
                .logo__visa
                  = link_to '#' do
                    = image_tag 'logo/logo_visa.gif', alt: 'visa', height: '25px'
                .logo__mastercard
                  = link_to '#' do
                    = image_tag 'logo/logo_mastercard.gif', alt: 'mastercard', height: '25px'
                .logo__diners
                  = link_to '#' do
                    = image_tag 'logo/diners_logo_white.gif', alt: 'diners', height: '25px'
            .expiration__date
              .expiration__date__text
                .date__text 有効期限
                .must__number 必須
              .expiration__date__contents
                %input.month__date{type: "text"}
                .month__text 月
                %input.year__date{type: "text"}
                .year__text 年
            .security__code
              .security__code__text
                .code__text セキュリティーコード
                .must__number 必須
              .security__code__contents
                %input.security__code__numbers{type: "text", placeholder: "カード背面4桁もしくは3桁の番号"}
              .security__code__backnumber
                .security__code__backnumber__question ?
                .security__code__backnumber__text カード裏面の番号とは？
            %button.add__button{type: "submit"} 追加する
            .back__text もどる
= render partial: 'items/footer'