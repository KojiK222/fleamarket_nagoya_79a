.header
  .title-bar
    = link_to image_tag("logo/logo.png", class: "logo"), "#"

.floor
  .content
    .content2
      .content3
        .text 購入内容の確認

      .content3
        .purchase
          .purchase__images
            = image_tag @item.item_images[0].src.url, class: "gazou"
          .purchase__name
            = @item.name

      .content3
        .money
          %span
            支払い金額（税込）
          %span.money__price
            = @item.price 
            円

      .content3
        .section
          .section__text
            支払い方法
          .section__icon
            = link_to card_path do
              = icon('fas', 'plus-circle')
            .section__entry
              = link_to '登録してください', card_path
              
          .main__content
            .section__chapter__container
              %h2.chapter__head
                支払い方法
                .payment__main
                  .payment__list
                    .payment__list__content
                      %h3.sub__head クレジットカード一覧
                  .card__payment__list
                    %form.card__payment__content
                    .card__list
                      .card__list__picture  
                    .card__number 
                      = "**** **** **** " + @default_card_information.last4
                    .expire__date 
                      - exp_month = @default_card_information.exp_month.to_s
                      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                      = exp_month + " / " + exp_year
                    = form_tag(card_path(@card.id), method: :delete, id: 'charge-form',  name: "inputForm") do
                      %input{ type: "hidden", name: "card_id", value: "" }
                      %button.delete__button 削除する

      .content3
        .section
          .section__text
            配送先
          .section__icon
            = link_to '#' do
              = icon('fas', 'plus-circle')
            .section__entry
              = link_to '登録してください', '#'  


      
      .content4
        .purchase-button
          = link_to "購入する", done_items_path(@item), class: "button2"


.description
  .description__bar
    %ul.description__list
      %li.description__lists
      = link_to 'プライバシー', '#', class: "description__link"
      %li.description__lists
      = link_to 'FURIMA利用規約', '#', class: "description__link"
      %li.description__lists
      = link_to '特定商取引に関する表記', '#', class: "description__link"
  .image
    %h1.app-title
      = link_to image_tag("logo/logo-white.png", class: "logo"), "#"
    %p.image__copyright
      © FURIMA, Inc.
