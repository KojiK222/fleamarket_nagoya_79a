= render partial: 'items/header'
.show_main
  .show_main_main
    .contentLeftpp
    .contentRight
      .contentRight_content
        .itemBox
          .itemBox_name
            = @item.name
          .itemBox_body
            %ul.Product
              %li.product
                = image_tag @item.item_images[0].src.url, class:"product_photo"
                %ul.Mini
                  .mini
                    = image_tag @item.item_images[0].src.url, class:"mini_photo"
          .itemBox_price
            %spen.itemBox_price_pay 
              ¥
              =  @item.price
          - if user_signed_in? && @item.seller_id != current_user.id
            .itemBox_button
              = link_to "購入画面に進む", "/card/show", class: "PayBtn"
          - elsif user_signed_in? && @item.seller_id == current_user.id
            .itemBox_button
              = link_to "削除", item_path(@item.id), method: :delete, class: "PayBtn"
            .itemBox_button
              = link_to "編集", edit_item_path(@item.id), class: "PayBtn"
          - else
            .itemBox_button
              = link_to "購入画面に進む", new_user_session_path, class: "PayBtn"
          .itemDetail
            = @item.introduction
          .Table
            %table.Table_table
              %tbody.tbody
                %tr.tr
                  %th.th 出品者
                  %td.td 
                    = @item.seller_id
                %tr.tr
                  %th.th カテゴリー
                  %td.td
                    = link_to @item.category_id, "#"
                    -#%br
                    -#= link_to "トップス", "#"
                    -#%br
                    -#= link_to "Tシャツ/カットソー(半袖/袖なし)", "#"
                %tr.tr
                  %th.th ブランド
                  %td.td 
                    = @item.brand
                %tr.tr
                  %th.th 商品のサイズ
                  %td.td
                %tr.tr
                  %th.th 商品の状態
                  %td.td 
                    = @item.condition_id
                %tr.tr
                  %th.th 配送料の負担
                  %td.td 
                    = @item.shipping_date_id
                %tr.tr
                  %th.th 発送元の地域
                  %td.td
                    = link_to @item.delivery_source_area_id, "#"
                %tr.tr
                  %th.th 発送日の目安
                  %td.td 
                    = @item.postage_id
          .optionalArea
            %ul.optionalArea_ul
              %li.linkBtn
                .fa
                  = icon('fas', 'star')
                  お気に入り 1
            %ul.optionalArea_ul
              %li.optionalBtn
                = link_to "#", class: "report" do
                  = icon('fas', 'flag')
                  不適切な商品の通報
        .commentoBox
          %ul.commentContents
          %form{"accept-charset" => "UTF-8", :action => "#", :method => "post",class:"new_comment",}
          %p.noticeMsg
            相手のことを考え丁寧なコメントを心がけましょう。
            %br
            不快な言葉遣いなどは利用制限や退会処分となることがあります。
          = form_with url: "/posts", method: :post, local: true do |form|
            = form.text_area :content, size: "70.5x4", class: "formTextArea"
          = link_to "#" do
            %button{:type => "submit", class:"commentBtn"}
              = icon('fas', 'comment')
              コメントをする
      %ul.contentRight_links
        %li.link_left
          = link_to "#" do
            = icon('fas', 'angle-left')
            前の商品
        %li.link_right
          = link_to "#" do
            後ろの商品
            = icon('fas', 'angle-right')
      .picupcontainer
        .probuctbox
          = link_to "レディースをもっと見る", "#", class: "probuctbox__title" 
          .probuctbox__listss
            .probuctbox__product
              = link_to "#", class:"photos" do
                = image_tag @item.item_images[0].src.url, class:"photos_photo"
                .photos__body
                  .photos__body__name
                    = @item.name
                  .photos__body__details
                    %ul.fee
                      %li.fee__pay
                        =  @item.price
                      %li.fee__pay
                        = icon('fas', 'star')
                        1
                    %p.tax （税込）
= render partial: 'items/footer'